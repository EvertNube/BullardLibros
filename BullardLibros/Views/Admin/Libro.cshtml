@using BullardLibros.Core.DTO
@using PagedList;
@using PagedList.Mvc;
@model CuentaBancariaDTO
@{
    ViewBag.Title = "Libro";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="vbox">
    <section class="scrollable padder">
        <div class="row m-b">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                @if (Model == null || Model.IdCuentaBancaria == 0)
                {
                    <h2>Nuevo Libro</h2>
                }
                else
                {
                    <h2>Actualizar Libro</h2>
                }
                <div class="row m-b">
                    <div class="col-xs-12 col-md-12">
                        @using (Html.BeginForm("AddLibro", "Admin", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true)

                            @Html.Partial("_showAlertMessages")

                            <section class="panel panel-default">
                                <header class="panel-heading font-bold">Formulario de Registro</header>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>Nombre de Cuenta</label>
                                        @Html.TextBoxFor(u => u.NombreCuenta, new { @class = "form-control", @placeholder = "Ingrese el nombre del libro", @type = "text" })
                                        @Html.ValidationMessageFor(u => u.NombreCuenta)
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha de conciliación</label>
                                        @Html.TextBoxFor(u => u.FechaConciliacion, "{0:dd/MM/yyyy}", new { @class = "datepicker-input form-control", @placeholder = "Ingrese la fecha de conciliación", @type = "text", @data_provide = "datepicker" })
                                        @Html.ValidationMessageFor(u => u.FechaConciliacion)
                                    </div>
                                    <div class="form-group">
                                        <label>Saldo Bancario</label>
                                        @Html.TextBoxFor(u => u.SaldoBancario, new { @class = "form-control", @placeholder = "Ingrese el saldo bancario", @type = "text" })
                                        @Html.ValidationMessageFor(u => u.SaldoBancario)
                                    </div>
                                    @if (Model != null && Model.IdCuentaBancaria != 0)
                                    {
                                        <div class="form-group">
                                            <div class="row m-l-none m-r-none bg-light lter">
                                                <div class="padder-v b-light text-center">
                                                    <span class="fa-stack fa-2x pull-in m-r-sm">
                                                        <i class="fa fa-circle fa-stack-2x text-success"></i>
                                                        <i class="fa fa-money fa-stack-1x text-white"></i>
                                                    </span>
                                                    <small class="h3 text-muted text m-r-sm"><strong>Saldo Disponible:</strong></small>
                                                    <span class="h3">
                                                        @Model.SaldoDisponible
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (ViewBag.EsAdmin && Model != null && Model.IdCuentaBancaria > 0)
                                    {
                                        @*<div class="line line-dashed line-lg pull-in"></div>*@
                                        <div class="form-group">
                                            <label>
                                                @Html.CheckBoxFor(u => u.Estado)
                                            </label>
                                            Activo
                                            @Html.ValidationMessageFor(u => u.Estado)
                                        </div>}
                                    else
                                    {
                                        @Html.TextBoxFor(u => u.Estado, new { @value = Model != null ? Model.Estado : false, @type = "hidden" })
                                    }

                                    <div class="line line-dashed line-lg pull-in"></div>
                                    @Html.TextBoxFor(u => u.IdCuentaBancaria, new { @value = Model != null ? Model.IdCuentaBancaria.ToString() : "", @type = "hidden" })
                                    @Html.TextBoxFor(u => u.SaldoDisponible, new { @value = Model != null ? Model.SaldoDisponible : 0, @type = "hidden" })
                                    @Html.TextBoxFor(u => u.SaldoBancario, new { @value = Model != null ? Model.SaldoBancario : 0, @type = "hidden" })
                                    @{var btnName = (Model != null && Model.IdCuentaBancaria > 0) ? "Guardar Cambios" : "Crear";}
                                    <button type="submit" class="btn btn-sm btn-primary btn-rounded">@btnName</button>
                                    <a class="btn btn-sm btn-danger btn-rounded" href="@Url.Action("Index")">Salir</a>
                                </div>
                            </section>
                        }

                        @if (Model != null && Model.IdCuentaBancaria != 0)
                        {
                            <section class="panel panel-default">
                                <header class="panel-heading font-bold">Movimientos</header>
                                <section class="panel panel-default">
                                    @if (ViewBag.EsAdmin)
                                    {
                                        <div class="row text-sm wrapper">
                                            <div class="col-sm-8">
                                                <div class="btn-group">
                                                    <label><input type="checkbox" id="btn-showInactive" /> Mostrar Inactivos</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <a class="btn btn-sm btn-success pull-right btn-rounded" href="@Url.Action("Movimiento", new { id = 0, idLibro = Model.IdCuentaBancaria })"><i class="fa fa-plus"></i> Crear nuevo Movimiento</a>
                                            </div>
                                        </div>
                                    }
                                    <div class="table-responsive">
                                        <table class="table table-striped m-b-none">
                                            <thead>
                                                <tr>
                                                    <th width="20%">Nombre</th>
                                                    <th class="text-center" width="20%">Fecha</th>
                                                    <th class="text-center" width="20%">Monto</th>
                                                    <th class="text-center" width="20%">Tipo</th>
                                                    <th class="text-center" width="20%">Opciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.listaMovimiento != null)
                                                {
                                                    foreach (var obj in Model.listaMovimientoPL)
                                                    {
                                                        var classInactive = (ViewBag.EsAdmin && !obj.Estado) ? "class='inactive'" : "";
                                                        <tr @Html.Raw(classInactive)>
                                                            <td width="20%">@obj.Nombre</td>
                                                            <td class="text-center" width="20%">@obj.Fecha.ToString("dd/MM/yyyy")</td>
                                                            <td class="text-center" width="20%">S/. @obj.Monto.ToString("#.##")</td>
                                                            @if (obj.IdTipoMovimiento == 1)
                                                            {
                                                                <td class="text-center" width="20%" style="color:#8EC100;">Entrada</td>}
                                                            else
                                                            {
                                                                <td class="text-center" width="20%" style="color:red">Salida</td> }
                                                            @if (ViewBag.EsAdmin)
                                                            {
                                                                <td align="center"><a href="@Url.Action("Movimiento", new { id = obj.IdMovimiento, idLibro = Model.IdCuentaBancaria })"><i class="fa fa-pencil"></i></a></td>
                                                            }
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <footer class="panel-footer">
                                        <div class="row">
                                            <div class="col-sm-4"></div>
                                            <div class="col-sm-4 text-center">
                                                <small class="text-muted inline m-t-sm m-b-sm">Página @(Model.listaMovimientoPL.PageCount < Model.listaMovimientoPL.PageNumber ? 0 : Model.listaMovimientoPL.PageNumber) de @Model.listaMovimientoPL.PageCount</small>
                                            </div>
                                            <div class="col-sm-4 text-right text-center-xs">
                                                @Html.PagedListPager(Model.listaMovimientoPL, page => Url.Action("Libro", new { id = ViewBag.IdCuentaBancaria, page }), new PagedListRenderOptions { UlElementClasses = new[] { "m-b-none", "m-t-none", "pagination-sm", "pagination" }, ContainerDivClasses = new[] { "" } })
                                            </div>
                                        </div>
                                    </footer>
                                    
                                </section>
                            </section>
                        }

                    </div>
                </div>

            </div>

        </div>
    </section>
</section>